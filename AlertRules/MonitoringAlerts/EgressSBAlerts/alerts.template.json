{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "metricAlerts_name": {
            "defaultValue": "PPS Egress Service Bus Subscriber Failure",
            "type": "String"
        },
        "ppsActionGroupName": {
            "type": "string",
            "metadata": {
                "description": "PPS Action group name"
            }
        },
        "wismoActionGroupName": {
            "type": "string",
            "metadata": {
                "description": "WISMO Action group name"
            }
        },
        "sbResourceId": {
            "type": "string",
            "metadata": {
                "description": "Resource Id for Service bus"
            }
        },
          "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location in which the alert should be deployed."
            }
        },
        "Tags": {
            "type": "object"
        }
      
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[parameters('metricAlerts_name')]",
            "location": "global",
             "tags": "[parameters('Tags')]",
            "properties": {
                "description": "Alert triggered from PPS Service bus as the requests are not processed by subscribers",
                "severity": 0,
                "enabled": true,
                "scopes": [
                    "[parameters('sbResourceId')]"
                ],
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "threshold": 10,
                            "name": "Metric1",
                            "metricNamespace": "Microsoft.ServiceBus/namespaces",
                            "metricName": "DeadletteredMessages",
                            "dimensions": [
                                {
                                    "name": "EntityName",
                                    "operator": "Include",
                                    "values": [
                                        "*"
                                    ]
                                }
                            ],
                            "operator": "GreaterThan",
                            "timeAggregation": "Maximum",
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "Microsoft.ServiceBus/namespaces",
                "actions": [
                    {
                        "actionGroupId": "[parameters('ppsActionGroupName')]",
                        "webHookProperties": {}
                    },
                    {
                        "actionGroupId": "[parameters('wismoActionGroupName')]",
                        "webHookProperties": {}
                    }
                ]
            }
        }
    ]
}