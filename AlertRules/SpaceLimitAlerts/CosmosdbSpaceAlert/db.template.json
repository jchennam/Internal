{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "metricAlerts_name": {
            "defaultValue": "PPS Cosmos space alert",
            "type": "String"
        },
        "cosmosInstance": {
            "type": "String"
        },
        "actionGroupName": {
            "type": "String"
        },
        "Tags": {
            "type": "object"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location in which the alert should be deployed."
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[parameters('metricAlerts_name')]",
            "location": "global",
            "tags": "[parameters('Tags')]",
            "properties": {
                "description": "Alerts triggered when Cosmos db registers activity",
                "severity": 2,
                "enabled": true,
                "scopes": [
                    "[parameters('cosmosInstance')]"
                ],
                "evaluationFrequency": "PT5M",
                "windowSize": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "threshold": 4398046511104,
                            "name": "Metric1",
                            "metricNamespace": "microsoft.documentdb/databaseaccounts",
                            "metricName": "DataUsage",
                            "operator": "GreaterThan",
                            "timeAggregation": "Total",
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "Microsoft.DocumentDB/databaseAccounts",
                "targetResourceRegion": "[parameters('location')]",
                "actions": [
                    {
                        "actionGroupId": "[parameters('actionGroupName')]",
                        "webHookProperties": {}
                    }
                ]
            }
        }
    ]
}